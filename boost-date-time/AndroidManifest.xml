<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="com.example.android.boostdatetime" android:installLocation="auto">

    <uses-sdk android:minSdkVersion="10"></uses-sdk>

    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".BoostDateTimeActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

            <meta-data android:name="android.app.lib_name" android:value="boost-date-time" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>